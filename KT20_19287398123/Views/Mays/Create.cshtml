@model KT20_19287398123.Models.May

@{
    ViewBag.Title = "Thêm Máy";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/Content/text.css">
    <link rel="stylesheet" type="text/css" href="~/Content/form.css">
    <link rel="stylesheet" type="text/css" href="~/Content/noti.css" />
}

@section scripts {
    <script src="~/Scripts/noti.js"></script>
}

<div>
    <a href="@Url.Action("Index", new {})" class="btn btn-primary btn-sm">
        <i class="fa fa-arrow-left"></i>
        <span>
            Quay về
        </span>
    </a>
</div>
<h2 class="text-title">Máy mới</h2>
@using (Html.BeginForm("Create", "Mays", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form">
        <div class="form-group">
            <div class="form-field">
                <div class="form-label">
                    @Html.LabelFor(model => model.MaM)
                </div>
                <div>
                    @Html.EditorFor(model => model.MaM, new { htmlAttributes = new { @class = "form-input" } })
                    @Html.ValidationMessageFor(model => model.MaM, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-field">
                <div class="form-label">
                    @Html.LabelFor(model => model.TenMay)
                </div>
                <div>
                    @Html.EditorFor(model => model.TenMay, new { htmlAttributes = new { @class = "form-input" } })
                    @Html.ValidationMessageFor(model => model.TenMay, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-field">
                <div class="form-label">
                    Mã loại máy
                </div>
                <div>
                    @Html.DropDownList("MaLoaiMay", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLoaiMay, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="form-footer">
        <div>
            <input type="submit" value="Tạo máy" class="btn btn-success btn-sm" />
        </div>
    </div>
}
